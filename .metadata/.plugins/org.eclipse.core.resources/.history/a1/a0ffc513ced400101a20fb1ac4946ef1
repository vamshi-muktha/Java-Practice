package com.tcs.sample.collections;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.HashSet;
import java.util.Iterator;
import java.util.LinkedList;
import java.util.List;
import java.util.Map;
import java.util.Set;
import java.util.TreeSet;

public class GenericsCollections {
	public static void main(String[] args) {
		List<Integer> list = new ArrayList<>();
		list.add(10);
		list.add(11);
		list.add(11);
		list.add(100);
		list.add(12);
		list.add(56);
		System.out.println(list);

		System.out.println(list.size());

		list.remove(new Integer(10));
		list.remove(1);

		System.out.println(list);

		List<Double> ll = new LinkedList<>();
		ll.add(10.0);
		ll.add(11.0);
		ll.add(11.8);

		System.out.println(ll);

		System.out.println(ll.size());

		ll.remove(new Double(10.0));
		ll.remove(1);

		System.out.println(ll);

		Set<Double> s = new HashSet<>();
		s.add(10.0);
		s.add(11.0);
		s.add(11.8);
		s.add(11.8);
		s.add(11.8);
		System.out.println(s);

		System.out.println(s.size());

		s.remove(new Integer(10));
		s.remove(1);

		System.out.println(s);

		Iterator ite = list.iterator();
		while (ite.hasNext()) {
			System.out.println((ite.next()).getClass().getName());
		}

		for (Object obj : list) {
			System.out.println(obj);
		}

		Set<Integer> ss = new TreeSet<>();
		ss.add(10);
		ss.add(100);
		ss.add(11);
		ss.add(11);
		ss.add(1);
		ss.add(50);
		System.out.println(ss);

		System.out.println(ss.size());

		ss.remove(new Integer(10));

		ss.remove(1);

		System.out.println(ss);
		for (Object obj : ss) {
			System.out.println(obj.getClass().getName());
		}
		
		
		ArrayList<Integer> al = new ArrayList<>();
		int sum = 0;
		for(int i = 0; i < 20; i++)al.add(i+1);
		for(int i : al)if(i % 2 != 0)sum += i;
		System.out.println("Odd sum " + sum);
		
		
		
		System.out.println("Maps ----------------------------------");
		Map<Integer, String> hm = new HashMap<>();
		hm.put(1, "abd");
		hm.put(2, "virat");
		hm.put(3, "Rohit");
		hm.put(4, "Rahul");
		hm.put(5, "Gambhir");
		
		System.out.println(hm.get(2));
		
		System.out.println(hm.size());
		
		System.out.println(hm.remove(4));
		
		for(Integer i : hm.keySet()) {
			System.out.println(i + " " + i.getClass().getName() + "     " + hm.get(i) + " "  + hm.get(i).getClass().getName());
		}
		
		for(String str : hm.values()) {
			System.out.println(str);
		}
		
	}
}
